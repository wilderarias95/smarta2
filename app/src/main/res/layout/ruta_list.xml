<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tPosRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tPosRuta"
            android:text="Nombre usuario"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tIdent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tNombre"
            android:layout_toEndOf="@id/tPosRuta"
            android:text="Documento de identificaciÃ³n"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tFechafactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tIdent"
            android:layout_toEndOf="@id/tPosRuta"
            android:text="dd/mm/yy"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tTotalFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Valor Factura"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tSaldoFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tTotalFactura"
            android:text="Saldo Factura"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tPosRuta"
            android:layout_below="@id/tFechafactura"
            android:textColor="@color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>